---
import { storyblokEditable } from "@storyblok/astro";
import InlineIcon from "../components/InlineIcon.astro";
import { IconLinkStoryblok } from "../generated/component-types-sb";
interface Props {
  blok: IconLinkStoryblok;
  classes: string;
}
const { blok, classes } = Astro.props;
---

<a
  {...storyblokEditable(blok)}
  class={classes}
  href={blok.link.cached_url}
  target={blok.link.target}
  rel={blok.link.target ? "noopener noreferrer" : undefined}
>
  <InlineIcon filename={blok.icon.filename} />
  <span class="sr-only">{blok.text}</span>
</a>
