---
import { renderRichText } from "@storyblok/astro";

interface Props {
  richtext: any;
}

const { richtext } = Astro.props;
const renderedRichText = renderRichText(richtext);
---

<style is:global>
  .richtext h1 {
    font-size: theme(fontSize.4xl);
    line-height: 1;
  }
  @media screen(lg) {
    .richtext h1 {
      font-size: theme(fontSize.8xl);
    }
  }
  .richtext h2 {
    font-size: 2rem;
  }
</style>
<div class="richtext text-white" set:html={renderedRichText} />
