---
import { renderRichText } from "@storyblok/astro";

interface Props {
  richtext: any;
  theme: "light" | "dark";
}

const { richtext, theme } = Astro.props;
const renderedRichText = renderRichText(richtext);
---

<style is:global>
  .richtext h1 {
    font-size: theme(fontSize.4xl);
    line-height: 1;
  }
  @media screen(lg) {
    .richtext h1 {
      font-size: theme(fontSize.8xl);
    }
  }
  .richtext h2 {
    font-size: 2rem;
  }

  .richtext a:hover {
    color: theme(colors.gruen);
  }

  .richtext .farbverlauf {
    background-image: linear-gradient(
      -225deg,
      #44107a 0%,
      #ff1361 33%,
      #fff800 100%
    );
    background-clip: text;
    text-fill-color: transparent;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
<div
  class={"richtext " + (theme === "dark" ? "text-white" : "text-black")}
  set:html={renderedRichText}
/>
